<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Our Team"
        android:textColor="#222222"
        android:textSize="25sp"

        />
    <ImageView
        android:id="@+id/img_p1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_team"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_p2"
        android:src="@drawable/iron_man"
        android:layout_marginTop="20dp"

        />
    <ImageView
        android:id="@+id/img_p2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/txt_team"
        app:layout_constraintLeft_toRightOf="@id/img_p1"
        app:layout_constraintRight_toLeftOf="@id/img_p3"
        android:src="@drawable/dont_know"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/img_p3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/txt_team"
        app:layout_constraintLeft_toRightOf="@id/img_p2"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/thor"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txt_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_p1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_t2"
        android:text="Iron Man"
        android:textColor="#222222"
        />
    <TextView
        android:id="@+id/txt_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_p2"
        app:layout_constraintLeft_toRightOf="@id/txt_t1"
        app:layout_constraintRight_toLeftOf="@id/txt_t3"
        android:text="Star Lord"
        android:textColor="#222222"
        />
    <TextView
        android:id="@+id/txt_t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_p3"
        app:layout_constraintLeft_toRightOf="@id/txt_t2"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Thor"
        android:textColor="#222222"
        />
    <TextView
        android:id="@+id/txt_t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_t1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_t5"
        android:text="Avenger Member"
        />
    <TextView
        android:id="@+id/txt_t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_t2"
        app:layout_constraintLeft_toRightOf="@id/txt_t4"
        app:layout_constraintRight_toLeftOf="@id/txt_t6"
        android:text="Avenger Member"
        />
    <TextView
        android:id="@+id/txt_t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_t3"
        app:layout_constraintLeft_toRightOf="@id/txt_t5"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Avenger Member"
        />
    <TextView
        android:id="@+id/mission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_t5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Mission"
        android:textSize="25sp"
        android:textColor="#222222"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mission"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:text="The Avengers are a fictional team of superheroes appearing in American comic books published by Marvel Comics. The team made its debut in The Avengers #1 (cover-dated Sept. 1963), created by writer-editor Stan Lee and artist/co-plotter Jack Kirby. The Avengers is Lee and Kirby's renovation of a previous superhero team, All-Winners Squad, who appeared in comic books series published by Marvel Comics' predecessor Timely Comics."
        />


</androidx.constraintlayout.widget.ConstraintLayout>